{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", ".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "AUTH_SECRET",
        "AUTH_TRUST_HOST",
        "NEXT_PUBLIC_BASE_URL",
        "MAIL_ID",
        "MAIL_PASSWORD",
        "HEADER_TAB_URL",
        "HEADER_TAB_URL2",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "MONGODB_URI",
        "NEXT_PUBLIC_SFACLOG_URL",
        "DASHBOARD_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
